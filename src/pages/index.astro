---
import Layout from '../layouts/Layout.astro';
import WorksCarousel from '../components/WorksCarousel';
import SocialLinks from '../components/SocialLinks';
---

<Layout title="Will Hong" description="Developer & Designer">
  <main class="min-h-screen flex flex-col items-center justify-center px-6 py-12">
    <div class="flex flex-col items-center gap-12 md:gap-16">
      <!-- Box Carousel -->
      <div class="select-none">
        <WorksCarousel client:load />
      </div>

      <!-- Bio Section -->
      <div class="flex flex-col items-center gap-4 text-center">
        <h1 class="text-xl md:text-2xl font-medium tracking-tight">
          Will Hong
        </h1>
        <p class="text-neutral-500 dark:text-neutral-400 max-w-xs text-sm md:text-base">
          Building digital experiences with code and design.
        </p>
        <SocialLinks className="mt-2" />
      </div>
    </div>
  </main>
</Layout>
