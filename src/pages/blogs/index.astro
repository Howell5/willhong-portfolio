---
import Layout from '../../layouts/Layout.astro';

// Placeholder blog posts - can be replaced with actual content collection later
const posts = [
  {
    slug: 'coming-soon',
    title: 'Coming Soon',
    description: 'More content is on the way...',
    date: new Date().toISOString().split('T')[0],
  },
];
---

<Layout title="Blog - Will Hong" description="Thoughts and writings by Will Hong">
  <main class="min-h-screen px-6 py-12 md:py-16">
    <div class="max-w-2xl mx-auto">
      <header class="mb-12">
        <a href="/" class="text-sm text-neutral-500 hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-neutral-100 transition-colors">
          ‚Üê Back
        </a>
        <h1 class="text-2xl md:text-3xl font-medium tracking-tight mt-6">
          Blog
        </h1>
      </header>

      <section>
        {posts.length === 0 ? (
          <p class="text-neutral-500 dark:text-neutral-400">No posts yet.</p>
        ) : (
          <ul class="space-y-8">
            {posts.map((post) => (
              <li>
                <article class="group">
                  <time class="text-sm text-neutral-400 dark:text-neutral-500">
                    {post.date}
                  </time>
                  <h2 class="text-lg font-medium mt-1 group-hover:text-neutral-600 dark:group-hover:text-neutral-300 transition-colors">
                    {post.title}
                  </h2>
                  <p class="text-neutral-500 dark:text-neutral-400 mt-1 text-sm">
                    {post.description}
                  </p>
                </article>
              </li>
            ))}
          </ul>
        )}
      </section>
    </div>
  </main>
</Layout>
